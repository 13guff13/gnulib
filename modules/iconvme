Description:
Character set conversion of strings made easy, uses iconv.

Files:
lib/iconvme.h
lib/iconvme.c
m4/iconvme.m4

Depends-on:
iconv
strdup

configure.ac:
gl_ICONVME
if test $gl_cond_libtool = false; then
  gl_ltlibdeps="$gl_ltlibdeps $LTLIBICONV"
  gl_libdeps="$gl_libdeps $LIBICONV"
fi

Makefile.am:
lib_SOURCES += iconvme.h iconvme.c
if GL_COND_LIBTOOL
lib_LDFLAGS += $(LTLIBICONV)
endif

Include:
"iconvme.h"

License:
LGPL

Maintainer:
Simon Josefsson
