Description:
Character set conversion of strings made easy, uses iconv.

Files:
lib/iconvme.h
lib/iconvme.c
m4/iconvme.m4

Depends-on:
iconv
strdup

configure.ac:
gl_ICONVME

Makefile.am:
lib_SOURCES += iconvme.h iconvme.c
if GL_COND_LIBTOOL
lib_LDFLAGS += $(LTLIBICONV)
else
lib_LDFLAGS += $(LIBICONV)
endif

Include:
"iconvme.h"

