Description:
poll() function: wait for some event on a set of file descriptors.

Files:
lib/poll.c
lib/poll_.h
m4/poll.m4

Depends-on:

configure.ac:
gl_FUNC_POLL

Makefile.am:
BUILT_SOURCES += $(POLL_H)
EXTRA_DIST += poll_.h

# We need the following in order to create <poll.h> when the system
# doesn't have one.
poll.h: poll_.h
	cp $(srcdir)/poll_.h $@-t
	mv $@-t $@
MOSTLYCLEANFILES += poll.h poll.h-t

Include:
#include <poll.h>

