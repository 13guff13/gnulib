Description:
Open a file at a directory.

Files:
lib/at-func.c
lib/mkdirat.c
lib/openat.c
lib/openat.h
lib/openat-priv.h
lib/openat-proc.c
m4/openat.m4
m4/mode_t.m4

Depends-on:
dosname
errno
extensions
fchdir
fcntl-h
fdopendir
fstat
gettext-h
intprops
largefile
mkdir           [test $HAVE_MKDIRAT = 0]
open
openat-die
save-cwd
stdbool
sys_stat
unistd

configure.ac:
gl_FUNC_OPENAT
AC_LIBOBJ([openat-proc])
if test $HAVE_MKDIRAT = 0; then
  AC_LIBOBJ([mkdirat])
fi
if test $HAVE_OPENAT = 0 || test $REPLACE_OPENAT = 1; then
  AC_LIBOBJ([openat])
fi

Makefile.am:

Include:
<fcntl.h>
<sys/stat.h>
<unistd.h>
"openat.h"

